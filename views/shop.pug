extends layouts/main-layout.pug

block links
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://image.freepik.com/free-photo/open-book-with-glasses-wooden-table-against-background-set-books-vintage-toning_101969-514.jpg", alt="Book image")
                            div.card__content
                                h2.product__price $19.99
                                p.prodcut__description A very interesting book about history of the 2nd WW
                            .card__actions
                                button.btn Add to Cart
        else
            h1 No Products